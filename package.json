{
  "name": "cc-ring",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.2.6",
  "publisher": "nelzomal",
  "license": "MIT",
  "icon": "icon.png",
  "l10n": "./l10n",
  "repository": {
    "type": "git",
    "url": "https://github.com/nelzomal/cc_ring"
  },
  "bugs": {
    "url": "https://github.com/nelzomal/cc_ring/issues"
  },
  "homepage": "https://github.com/nelzomal/cc_ring#readme",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "notifications",
    "audio",
    "productivity",
    "sound",
    "alert",
    "completion",
    "ai",
    "accessibility"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "cc-ring.enabled": {
          "type": "boolean",
          "default": true,
          "description": "%config.enabled.description%",
          "order": 1
        },
        "cc-ring.volume": {
          "type": "number",
          "default": 50,
          "minimum": 0,
          "maximum": 100,
          "description": "%config.volume.description%",
          "order": 2
        },
        "cc-ring.sound": {
          "type": "string",
          "default": "complete",
          "enum": [
            "complete",
            "subtle",
            "notification",
            "custom"
          ],
          "enumDescriptions": [
            "%config.sound.complete%",
            "%config.sound.subtle%",
            "%config.sound.notification%",
            "%config.sound.custom%"
          ],
          "description": "%config.sound.description%",
          "order": 3
        },
        "cc-ring.customSoundPath": {
          "type": "string",
          "default": "",
          "description": "%config.customSoundPath.description%",
          "order": 4
        }
      }
    },
    "commands": [
      {
        "command": "cc-ring.testSound",
        "title": "%command.testSound%",
        "category": "%command.category%"
      },
      {
        "command": "cc-ring.selectCustomSound",
        "title": "%command.selectCustomSound%",
        "category": "%command.category%"
      },
      {
        "command": "cc-ring.installHook",
        "title": "%command.installHook%",
        "category": "%command.category%"
      },
      {
        "command": "cc-ring.uninstallHook",
        "title": "%command.uninstallHook%",
        "category": "%command.category%"
      },
      {
        "command": "cc-ring.showStatus",
        "title": "%command.showStatus%",
        "category": "%command.category%"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "l10n-extract": "npx @vscode/l10n-dev export -o ./l10n ./src",
    "l10n-check": "ts-node --transpile-only scripts/check-l10n.ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@prantlf/jsonlint": "^16.0.0"
  }
}
